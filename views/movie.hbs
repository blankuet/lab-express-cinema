<div class="max-w-md mx-auto bg-gray-800 rounded-lg shadow-md overflow-hidden my-10">
    <img class="w-full h-64 object-cover" src="{{movie.image}}" alt="Movie movie.">
    <div class="p-6">
        <h2 class="text-2xl font-bold mb-2">{{movie.title}}</h2>
        <p class="text-gray-400 mb-4">{{movie.description}}</p>
        
        <div class="mb-4">
            <h3 class="text-xl font-semibold mb-2">Stars</h3>
            <ul class="flex space-x-2">
                {{#each stars}}
                <li class="bg-gray-700 px-3 py-1 rounded-full">{{movie.stars}}</li>
                {{/each}}
            </ul>
        </div>

        <div>
            <h3 class="text-xl font-semibold mb-2">Showtimes</h3>
            <ul class="space-y-2">
                {{#each showtimes}}
                <li class="bg-gray-700 px-3 py-1 rounded">{{movie.showtimes}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>